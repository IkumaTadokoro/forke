{
  "name": "forke",
  "version": "0.0.0",
  "description": "Simple CLI tool designed to measure development productivity from GitHub info.",
  "main": "dist/cli.js",
  "bin": {
    "filo": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsc && dotenv -e .env -- node dist/cli.js",
    "build": "tsc",
    "prepare": "husky install",
    "lint": "eslint --fix '{src,tests}/**/*.{ts,js}'",
    "format": "prettier --write '{src,tests}/**/*.{ts,js}'",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:ui": "vitest --ui",
    "codegen": "graphql-codegen --config codegen.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IkumaTadokoro/forke.git"
  },
  "keywords": [
    "four-keys",
    "devops"
  ],
  "author": "IkumaTadokoro <tadokorodev@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/IkumaTadokoro/forke#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@graphql-codegen/cli": "3.3.1",
    "@graphql-codegen/client-preset": "3.0.1",
    "@graphql-codegen/typescript": "^3.0.4",
    "@graphql-codegen/typescript-graphql-request": "^4.5.9",
    "@graphql-codegen/typescript-operations": "^3.0.4",
    "@types/cli-color": "^2.0.2",
    "@types/node": "^18.16.2",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vitest/ui": "^0.30.1",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "semantic-release": "^21.0.2",
    "tsx": "^3.12.6",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  },
  "dependencies": {
    "csv": "^6.2.10",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "graphql": "^16.6.0",
    "graphql-request": "^5.1.0",
    "yargs": "^17.7.2"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "branches": [
      "main"
    ]
  }
}
